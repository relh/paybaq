<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="edittext" parent="@android:style/Theme.Light">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/pqblue</item> 
        <item name="android:textSize">40sp</item> 
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:background">@color/silver</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="textview" parent="@android:style/Theme.Light">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>  
        <item name="android:textSize">40sp</item>
    </style>
    
    <style name="customButton">
        <item name="android:background">@drawable/custom_button</item>
    </style>
    
    <style name="edit_account">
        <item name="android:background">@drawable/edit_account</item>
    </style>
    
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:buttonStyle">@android:color/holo_purple</item>
    </style>

</resources>
